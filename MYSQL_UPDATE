CREATE TABLE IF NOT EXISTS options (
  id int(5) NOT NULL,
  optionName varchar(150) NOT NULL default '',
  optionValue varchar(250) NOT NULL default '',
  varName varchar(150) NOT NULL default '',
  type varchar(20) NOT NULL default '',
  PRIMARY KEY  (id)
) TYPE=MyISAM;
